<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title – CarRental</title>
    <link href="~/Content/Fonts/fontawesome-free-5.12.1-web/css/all.css" rel="stylesheet" />
    <link href="~/Content/Fonts/fontawesome-free-5.12.1-web/css/fontawesome.min.css" rel="stylesheet" />

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/Scripts/jquery-ui-1.12.1.js")
    @Scripts.Render("~/scripts/jquery.unobtrusive-ajax.js")
  
</head>
<body>
    <div class="wraper " id="wrapper">
        <nav class="navbar  navbar-light  " id="navbr">
            <a href="@Url.Action("Index", "Home", new { area = "" })">
                <img class="" src="~/Content/img/logo.png" alt="Logo" style="height:40px;" />
            </a>
            @*<div >

                @{
                    foreach (var i in CarRental.WEB.Languages.LanguageMang.AvailableLanguages)
                    {
                        @Html.ActionLink(i.LanguageFullName, "ChangeLanguage", "Home", new {Area="", lang = i.LanguageCultureName },null) <text> </text>
                    }
                }
            </div>*@
            <div class=" d-none d-md-flex">
               @{
                   var user = "@Csharp17";
               }
                <div class="d-flex justify-content-between ml-3">
                    <a href="tg://resolve?domain=<@user>" class="text-decoration-none font-weight-bold text-dark ">
                        <img alt="Whats app" src="~/Content/img/socialNetworks/telegram.png" style="width: 45px; height: 45px;"/>
                        <span> Telegram</span>
                    </a>
                </div>
                <div class=" d-flex justify-content-between ml-3">

                    <a href="https://api.whatsapp.com/send?phone=0996602810" class="text-decoration-none font-weight-bold text-dark">
                        <img alt="Whats app" src="~/Content/img/socialNetworks/whatsapp.png" style="width: 45px; height: 45px;"/>
                        <span> Whats App</span>
                    </a>
                </div>
                <div class=" d-flex justify-content-between ml-3">
                    <a href="viber://pa?chatURI=[public account URI]&text=[Hello]" class="text-decoration-none font-weight-bold text-dark">
                        <img alt="Whats app" src="~/Content/img/socialNetworks/viber.png" style="width: 45px; height: 45px;"/>
                        <span> Viber</span>
                    </a>
                </div>
            </div>
            <div class="auth mt-3 ros">

                @{
                    Html.RenderAction("RendMenu", "Home", new { Area = "" });
                }
            </div>

        </nav>
        <div class=" body-content " id="main">
            <div class="clearfix" >
                <div class="side_sect " >

                    @RenderSection("SideSearch", false)

                </div>
                <div class="">@RenderBody()</div>
            </div>

        </div>
    </div>
<footer id="footer" class=" container-fluid  text-center">

    <div class="d-flex justify-content-center flex-wrap">
        <div class="mr-2">
            <h5 class="text-muted">Our Email</h5>
            <p class="footer-contact">car.rental.kharkiv@@gmail.com</p>
        </div>
        <div class="ml-2">
            <h5 class="text-muted ">Our Phone</h5>
            <p class="footer-contact">+(38)0995502514</p>
        </div>
        <div class="ml-2">
            <h5 class="text-muted ">Our Adress</h5>
            <p class="footer-contact">Kharkiv, Street Sumska 17</p>
        </div>
    </div>
    <div class="text-muted pb-1">&copy; @DateTime.Now.Year – Car Rental All Rights Reserved</div>
</footer>
   
    @Styles.Render("~/Content/themes/base/jquery-ui.css")
    @Styles.Render("~/Content/themes/base/base.css")
    @Styles.Render("~/Content/themes/base/datepicker.css")

@Scripts.Render("~/bundles/bootstrap")
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    @RenderSection("scripts", required: false)


    <script type="text/javascript">
        $(document).ready(function ($) {
            $('.icon-menu').click(function (event) {
                $('.sidebar').toggleClass('active');
                $('.content').toggleClass('blur-car-area');
                $('#burger').toggleClass('d-none');
            });
            if ($(window).width() > 991) {
                $("#close-sec").hide();
            };
            $(".paginat").find("a").click(function (e) {
                e.preventDefault();
                var a = $(this).attr("href").replace(/[^\d.]/g, '');
                var p = $("#Page").val(a);
                $("#Page").replaceWith(p);
                var a = parseInt(a);

                $("#sbm").click();

            });
        });
        $(window).resize(function () {
                     
            if ($(window).width() > 991) {
                $("#close-sec").hide();
            }; 
            if ($(window).width() < 991) {
                $("#close-sec").show();
            }; 
        });
       
    </script>
  
</body>
</html>
