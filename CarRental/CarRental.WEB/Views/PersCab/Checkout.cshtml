@model CarRental.BLL.DTO.OrderDTO

@{
    ViewBag.Title = "Checkout";
}
<script src="~/Scripts/umd/popper.js"></script>
<div class="row mt-2 checkout">
    <div class="card offset-3 offset-sm-4 offset-lg-2 offset-md-2 col-10 col-md-4  mt-3 rounded-lg  bg-light" style="max-width:260px;">
        <h4 class="text-center mb-0 mt-1">@Model.Car.Name</h4>
        <div class="text-center ">
            <span class="mr-1">@Model.Car.FuelConsump L</span>|
            <span class="mr-1">@Model.Car.FuelType</span>|
            <span class="mr-1">@Model.Car.CarType</span>
        </div>
        @if (Model.Car.Image == null)
        {
            Model.Car.Image = "/Content/img/vehicle1.jpg";
        }


        <img src="@Model.Car.Image" class=" img-fluid ml-2 mr-2 rounded" alt="carDescription">
        <div class="card-body pt-1 p-2">

            <div class="flex-row d-flex justify-content-center mt-0">
                <div class="ml-2 mr-2 mb-0">
                    <div class="text-center">
                        @if (Model.Car.AutomaticTransm == true)
                        {
                            <img src="~/Content/img/ico/a.png" alt="Transm" class="sign " />
                            <p class="sign_cap  mb-0">Auto</p>
                        }
                        else
                        {
                            <img src="~/Content/img/ico/m.png" alt="Transm" class="sign" />
                            <p class="sign_cap  mb-0">Manual</p>
                        }
                    </div>
                </div>
                <div class="ml-2 mr-2  mb-0">
                    <div class="text-center">
                        <img alt="Capac" src="~/Content/img/ico/human.png" class="sign" />
                        <p class="sign_cap  mb-0">@Model.Car.Capacity</p>
                    </div>

                </div>
                <div class="ml-2 mr-2  mb-0">
                    <div class="text-center">
                        <img alt="Drive" src="~/Content/img/ico/wheel.png" class="sign" />
                        <p class="sign_cap  mb-0">@Model.Car.DriveUnit</p>
                    </div>

                </div>
                <div class="ml-2 mr-2  mb-0">
                    <div class="text-center">
                        <img alt="Consump" src="~/Content/img/ico/petrol.png" class="sign" />
                        <p class="sign_cap  mb-0">@Model.Car.FuelConsump/100km</p>
                    </div>

                </div>
            </div>

            <p class="text-center mb-1 font-weight-bold">Price per day</p>
            <table class="table table-striped pr_table mt-0">
                <thead class="">
                    <tr>
                        <th scope="col">Withou Pleage</th>
                        <th scope="col"></th>
                        <th scope="col">Pleage</th>

                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th>@Model.Car.Price $</th>
                        <td>1-3 days</td>
                        <td>@Convert.ToInt32(Math.Round((double)@Model.Car.Price - 2)) $</td>

                    </tr>
                    <tr>
                        <th scope="row">@Convert.ToInt32(Math.Round((double)@Model.Car.Price * 0.9)) $</th>
                        <td>4-9 days</td>
                        <td scope="row">@Convert.ToInt32(Math.Round((double)@Model.Car.Price * 0.9 - 2)) $</td>

                    </tr>
                    <tr>
                        <th scope="row">@Convert.ToInt32(Math.Round((double)@Model.Car.Price * 0.7)) $</th>
                        <td>10-25 days</td>
                        <td scope="row">@Convert.ToInt32(Math.Round((double)@Model.Car.Price * 0.7 - 2))</td>

                    </tr>
                    <tr>
                        <th scope="row">@Convert.ToInt32(Math.Round((double)@Model.Car.Price * 0.6)) $</th>
                        <td>25+ days</td>
                        <td scope="row">@Convert.ToInt32(Math.Round((double)@Model.Car.Price * 0.6 - 2))</td>

                    </tr>
                </tbody>
            </table>


        </div>
    </div>



    <div class="col-12 col-sm-12 col-md-4 rounded bg-light mt-3 ml-sm-3 border border-primary  d-flex justify-content-center">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

        <div class="form-horizontal">


            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group m-0">

                <div class="col-md-10">
                    @Html.HiddenFor(model => model.Id, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Id, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">

                <div class="col-md-10">
                    @Html.HiddenFor(model => model.User_Id, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.User_Id, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">

                <div class="col-md-10">
                    @Html.HiddenFor(model => model.CarId, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CarId, "", new { @class = "text-danger" })
                </div>
            </div>
            <div><h5 class="ml-2 text-center">Car issuance</h5></div>

            <div class="form-group ml-2  ">
                <select id="start_p" class="form-control ">
                    <option value="Kharkiv Gagarina 23">Kharkiv Gagarina 23</option>
                    <option value="Kharkiv South Railvay">Kharkiv South Railvay</option>
                    <option value="Kharkiv Central Airport">Kharkiv Central Airport</option>
                </select>
            </div>

            <div class="d-flex flex-row mb-0">

                <div class="form-group">
                    @Html.LabelFor(model => model.StartTime, htmlAttributes: new { @class = "control-label d-inp datepicker ml-3 mb-0 " })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.StartTime, new { htmlAttributes = new { @class = "form-control d-inp" } })
                    </div>
                </div>
                <div class="  ">
                    <select id="start_t" class="form-control ">
                        @for (int i = 0; i < 24; i++)
                        {
                            <option value=@i>@i:00</option>
                        }

                    </select>
                    @Html.ValidationMessageFor(model => model.StartTime, "", new { @class = "text-danger" })

                </div>

            </div>
          
            <div class="mt-1"><h5 class="ml-2 text-center">Car return</h5></div>
            <div class="form-group ml-2 ">
                <select id="end_p" class="form-control ">
                    <option value="Kharkiv Gagarina 23">Kharkiv Gagarina 23</option>
                    <option value="Kharkiv South Railvay">Kharkiv South Railvay</option>
                    <option value="Kharkiv Central Airport">"Kharkiv Central Airport</option>
                </select>
            </div>
            <div class="flex-row d-flex">
                <div class="form-group">
                    @Html.LabelFor(model => model.EndTime, htmlAttributes: new { @class = "control-label d-inp datepicker ml-3 mb-0" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.EndTime, new { htmlAttributes = new { @class = "form-control d-inp" } })
                    </div>
                </div>


                <div class="  ">
                    <select id="end_t" class="form-control ">
                        @for (int i = 0; i < 24; i++)
                        {
                            <option value=@i>@i:00</option>
                        }

                    </select>
                    @Html.ValidationMessageFor(model => model.EndTime, "", new { @class = "text-danger" })

                </div>

            </div>

            
                    <span class=" ml-3 mb-2">Driver Necessity </span>
                    <div class="checkbox d-inline mt-2">
                        @Html.EditorFor(model => model.Driver, new { htmlAttributes = new { @class = "big_check mb-0 mt-1 ml-3" } })
                    </div>
                

            <div class="form-group">
                <p class="control-label ml-3"> Passport Number</p>
                <div class="col-md-10">
                    <div class="checkbox">
                        @Html.EditorFor(model => model.PassportNumb, new { htmlAttributes = new { @class = "control-label d-inp rounded" } })

                        @Html.ValidationMessageFor(model => model.PassportNumb, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-group">

                <div class="col-md-10">
                    <div class="checkbox">
                        @Html.HiddenFor(model => model.IsDeleted)
                    </div>
                </div>
            </div>

            <div class="form-group">

                <div class="col-md-10">
                    @Html.HiddenFor(model => model.Status, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            @Html.Hidden("start_time", null, new { AllowHtmlAttributes = new { @id = "start_time" } })
            @Html.Hidden("end_time", null, new { AllowHtmlAttributes = new { @id = "end_time" } })
            @Html.Hidden("start_place", null, new { AllowHtmlAttributes = new { @id = "start_place" } })
            @Html.Hidden("end_place", new { AllowHtmlAttributes = new { @id = "end_place" } })
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" id="sb_but" class="btn btn-success"><span class="fa fa-cart-plus mr-1"></span>Order</button>
                </div>
            </div>
        </div>
        }
    </div>
</div>
<link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
@section Scripts {


    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('input[type=datetime]').datepicker({
                dateFormat: 'dd/mm/yy',
                startDate: new Date(),
                changeMonth: true,
                changeYear: true,
                minDate: new Date(),
                maxDate: '+2y',
                onSelect: function (dateText, inst) {
                    $("#txtEndDate").datepicker("option", "minDate",
                        $("#txtStartDate").datepicker("getDate"));
                }
            });
            $('#sb_but').click(function (e) {
                
                var s1 = $("#start_time").val($("#start_t").find(":selected").val());
                var s2 = $("#end_time").val($("#end_t").find(":selected").val());
                var p1 = $("#start_place").val($("#start_p").find(":selected").val());
                var s2 = $("#end_place").val($("#end_p").find(":selected").val());
                $("#start_time").replaceWith(s1);
                $("#end_time").replaceWith(s2);
                $("#start_place").replaceWith(p1);
                $("#end_place").replaceWith(p2);
                
            });
                
            

        });
    </script>

}