@model CarRental.BLL.DTO.UserDTO
<div class="row mt-2">
    <div class=" col-4 offset-4   mt-3">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

        <div class="form-horizontal border border-primary  rounded">
            <div class="text-center m-1 bg-light border-bottom"><h4>Edit Profile</h4></div>


            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)

            <div class="form-group">
                <div class="col-md-10">
                    @Html.HiddenFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    @Html.HiddenFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <p title="Please enter real name." class="ml-3 mb-1 mt-1 text-primary">Your Name:</p>
            <div class="form-group">

                <div class="col-md-10">
                    @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    @Html.HiddenFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    @Html.HiddenFor(model => model.Role, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    <div class="checkbox">
                        @Html.HiddenFor(model => model.Banned)
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    @Html.HiddenFor(model => model.RepairInvoice, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <p title="Ten numbers without country code." class="ml-3 mb-1 mt-1 text-primary">Your Phone:</p>
            <div class="form-group">

                <div class="col-md-10">
                    @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
                </div>
            </div>
            <p title="Passport number contains 9 numbers." class="ml-3 mb-1 mt-1 text-primary">Your Passport:</p>
            <div class="form-group">
                <div class="col-md-10">
                    @Html.EditorFor(model => model.PassportNumb, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.PassportNumb, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                 
                    <button type="submit" class="btn btn-primary"><span class="fa fa-save mr-1"></span>Save</button>
                </div>
            </div>
        </div>
        }
    </div>
</div>
