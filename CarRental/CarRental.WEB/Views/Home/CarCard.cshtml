@model CarRental.BLL.DTO.CarDTO
@using CarRental.BLL
<div class="card mr-3 mt-3 rounded-lg shadow-sm" style="width: 18rem;">
    <div>
        @if (ViewBag.popCar.Contains(Model.Id))
        {
            <h4 class="text-center mb-0 mt-1"><span class="ml-5 text-center"> @Model.Name</span><span class="badge badge-danger h-25 float-right mr-1 ">@Resource.Popular</span></h4>
        }
        else
        {
            <h4 class="text-center mb-0 mt-1"><span > @Model.Name</span></h4>
        }
    </div>
    
    <div class="text-center ">
        <span class="mr-1">@Model.FuelConsump L</span>|
        <span class="mr-1">

            @if (Model.FuelType.ToLower() == "petrol")
            {
                @Resource.Petrol
            }
            else if (Model.FuelType.ToLower() == "dysel")
            {
                @Resource.Dysel
            }
            else
            {
                @Model.FuelType
            }
        </span>|
        <span class="mr-1">

            @if (Model.CarType.ToLower() == "econom")
            {
                @Resource.Econom
            }
            else if (Model.CarType.ToLower() == "business")
            {
                @Resource.Business
            }
            else if (Model.CarType.ToLower() == "premium")
            {
                @Resource.Premium
            }
            else
            {
                @Model.CarType
            }
        </span>
    </div>

    @if (Model.Image == null)
    {
        Model.Image = "/Content/img/vehicle1.jpg";
    }

<div class="car-image">
    @{
        var dataTarget = "carouselExampleIndicators" + Model.Id.ToString();
    }

    <div id="@dataTarget" class="carousel slide" data-ride="carousel">

        <div class="carousel-inner">
            @if (Model.Image != null)
            {
                <div class="carousel-item active">
                    <img src="@Model.Image" class=" img-fluid ml-2 mr-2 rounded responsive" alt="carDescription">
                </div>
            }
            @if (Model.Image2 != null)
            {
                <div class="carousel-item active">
                    <img src="@Model.Image2" class=" img-fluid ml-2 mr-2 rounded responsive" alt="carDescription">
                </div>
            }
            @if (Model.Image3 != null)
            {
                <div class="carousel-item active">
                    <img src="@Model.Image3" class=" img-fluid ml-2 mr-2 rounded responsive" alt="carDescription">
                </div>
            }
        </div>
        <a class="carousel-control-prev" href="#@dataTarget" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#@dataTarget" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>

    <div class="card-body pt-1 p-2">

        <div class="flex-row d-flex justify-content-center mt-0">
            <div class="ml-2 mr-2 mb-0">
                <div class="text-center">

                    @if (Model.AutomaticTransm == false)
                    {
                        <img src="~/Content/img/ico/m.png" alt="Transm" class="sign" />
                        <p class="sign_cap  mb-0">
                            @Resource.TransManual
                        </p>
                    }
                    else
                    {
                        <img src="~/Content/img/ico/a.png" alt="Transm" class="sign " />
                        <p class="sign_cap  mb-0">
                            @Resource.TransAuto
                        </p>
                    }


                </div>
            </div>
            <div class="ml-2 mr-2  mb-0">
                <div class="text-center">
                    <img alt="Capac" src="~/Content/img/ico/human.png" class="sign" />
                    <p class="sign_cap  mb-0">@Model.Capacity</p>
                </div>

            </div>
            <div class="ml-2 mr-2  mb-0">
                <div class="text-center">
                    <img alt="Drive" src="~/Content/img/ico/wheel.png" class="sign" />
                    @if (Model.DriveUnit.ToLower() == "front")
                    {
                        <p class="sign_cap  mb-0">
                            @Resource.FrontWheel
                        </p>
                    }
                    else if (Model.DriveUnit.ToLower() == "rear")
                    {
                        <p class="sign_cap  mb-0">
                            @Resource.RearWheel
                        </p>
                    }
                    else if (Model.DriveUnit.ToLower() == "four")
                    {
                        <p class="sign_cap  mb-0">
                            @Resource.FourWheelDrive
                        </p>
                    }
                </div>

            </div>
            <div class="ml-2 mr-2  mb-0">
                <div class="text-center">
                    <img alt="Consump" src="~/Content/img/ico/petrol.png" class="sign" />
                    <p class="sign_cap  mb-0">@Model.FuelConsump/100km</p>
                </div>

            </div>
        </div>

        <p class="text-center mb-1 font-weight-bold">@Resource.PricePerDay</p>
        <table class="table table-striped pr_table mt-0">
            <thead class="">
            <tr>
                <th scope="col">@Resource.WithoutPleage</th>
                <th scope="col"></th>
                <th scope="col">@Resource.Pleage</th>

            </tr>
            </thead>
            <tbody>
            <tr>
                <th>@Model.Price $</th>
                <td>1-3 @Resource.Days</td>
                <td>@Convert.ToInt32(Math.Round((double)@Model.Price - 2)) $</td>

            </tr>
            <tr>
                <th scope="row">@Convert.ToInt32(Math.Round((double)@Model.Price * 0.9)) $</th>
                <td>4-9 @Resource.Days</td>
                <td scope="row">@Convert.ToInt32(Math.Round((double)@Model.Price * 0.9 - 2)) $</td>

            </tr>
            <tr>
                <th scope="row">@Convert.ToInt32(Math.Round((double)@Model.Price * 0.7)) $</th>
                <td>10-25 @Resource.Days</td>
                <td scope="row">@Convert.ToInt32(Math.Round((double)@Model.Price * 0.7 - 2)) $</td>

            </tr>
            <tr>
                <th scope="row">@Convert.ToInt32(Math.Round((double)@Model.Price * 0.6)) $</th>
                <td>25+ @Resource.Days</td>
                <td scope="row">@Convert.ToInt32(Math.Round((double)@Model.Price * 0.6 - 2)) $</td>

            </tr>
            </tbody>
        </table>
        <div class="mb-2">
            @Html.ActionLink(Resource.Rent, "Checkout", "PersCab", new {id = Model.Id, pleage = false}, new {@class = "btn btn-info float-left pr_tabble_btn align-middle font-weight-bold", @id = "rent"})

            @Html.ActionLink(Resource.RentWithPleage, "Checkout", "PersCab", new {id = Model.Id, pleage = true}, new {@class = "btn btn-success pr_tabble_btn align-middle float-right p-0 pt-3 font-weight-bold"})
        </div>
        <div class="text-white">d</div>
        <div class="mt-2 text-white">f</div>
        
    </div>
</div>
<script>

 
</script>