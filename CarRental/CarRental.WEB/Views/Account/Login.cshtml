@model CarRental.WEB.Models.LoginModel
@using CarRental.BLL
@{
    ViewBag.Title = "Login";
}


<div class="row mt-5">
    <div class="p-3 border border-primary bg-light col-4 offset-4">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">         
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <p class="text-primary ml-3">@Resource.Email:</p>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <p class="text-primary ml-3">@Resource.Password:</p>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value=@Resource.LogIn class="btn btn-primary" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>