@model CarRental.BLL.DTO.CarDTO
<div class="row m-4">
    <div class="col-6 offset-3 p-0 border border-primary rounded">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="bg-dark p-1 text-white"><h4 class="font-weight-bold text-center">@CarRental.BLL.Resource.EditCar</h4></div>

            <div class="form-horizontal card p-3 bg-light p-3">

                @Html.ValidationSummary(true, "", new { @class = "text-danger " })
                <div class="form-group">
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Id, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Id, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label  col-md-6" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control col-md-6" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Manufacturer, htmlAttributes: new { @class = "control-label col-md-6 " })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Manufacturer, new { htmlAttributes = new { @class = "form-control col-md-6" } })
                        @Html.ValidationMessageFor(model => model.Manufacturer, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Capacity, htmlAttributes: new { @class = "control-label col-md-6" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Capacity, new { htmlAttributes = new { @class = "form-control col-md-6" } })
                        @Html.ValidationMessageFor(model => model.Capacity, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.DriveUnit, htmlAttributes: new { @class = "control-label col-md-6" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.DriveUnit, new { htmlAttributes = new { @class = "form-control col-md-6" } })
                        @Html.ValidationMessageFor(model => model.DriveUnit, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.AutomaticTransm, htmlAttributes: new { @class = "control-label col-md-6" })
                    <div class="col-md-10">
                        <div class="checkbox">
                            @Html.EditorFor(model => model.AutomaticTransm)
                            @Html.ValidationMessageFor(model => model.AutomaticTransm, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.AirConditon, htmlAttributes: new { @class = "control-label col-md-6" })
                    <div class="col-md-10">
                        <div class="checkbox">
                            @Html.EditorFor(model => model.AirConditon)
                            @Html.ValidationMessageFor(model => model.AirConditon, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Price, htmlAttributes: new { @class = "control-label col-md-6" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control col-2" } })
                        @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Door, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Door, new { htmlAttributes = new { @class = "form-control col-2" } })
                        @Html.ValidationMessageFor(model => model.Door, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.FuelType, htmlAttributes: new { @class = "control-label col-md-6" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.FuelType, new { htmlAttributes = new { @class = "form-control col-md-6" } })
                        @Html.ValidationMessageFor(model => model.FuelType, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.FuelConsump, htmlAttributes: new { @class = "control-label col-md-6" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.FuelConsump, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.FuelConsump, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.IsDeleted, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <div class="checkbox">
                            @Html.EditorFor(model => model.IsDeleted)
                            @Html.ValidationMessageFor(model => model.IsDeleted, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>


                <div class="form-group">
                    @Html.LabelFor(model => model.CarType, htmlAttributes: new { @class = "control-label col-md-6" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.CarType, new { htmlAttributes = new { @class = "form-control col-md-6" } })
                        @Html.ValidationMessageFor(model => model.CarType, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.EngSize, htmlAttributes: new { @class = "control-label col-md-6" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.EngSize, new { htmlAttributes = new { @class = "form-control col-2" } })
                        @Html.ValidationMessageFor(model => model.EngSize, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div>
                    <label for="fil" class="btn btn-secondary ml-2 d-inline w-25 d-block"><i class="fa fa-images mr-1"></i> Image</label>

                    <label for="fil2" class="btn btn-secondary ml-2 d-inline w-25 d-block"><i class="fa fa-images mr-1"></i> Image 2</label>

                    <label for="fil3" class="btn btn-secondary ml-2 d-inline w-25 d-block"><i class="fa fa-images mr-1"></i> Image 3</label>
                </div>

                <div class="d-flex justify-content-center flex-wrap">
                    <div id="res">
                        <div class="">
                            @Html.HiddenFor(model => model.Image, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Image, "", new { @class = "text-danger" })
                            <img alt="Car immage" src="@Model.Image" />
                        </div>
                    </div>
                    <div id="res2">
                        <div class=" bg-danger">
                            @Html.HiddenFor(model => model.Image2, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Image2, "", new { @class = "text-danger" })
                            <img alt="Car immage" src="@Model.Image2" />
                        </div>
                    </div>
                    <div id="res3">
                        <div class=" bg-danger">
                            @Html.HiddenFor(model => model.Image3)
                            @Html.ValidationMessageFor(model => model.Image3, "", new { @class = "text-danger" })
                            <img alt="Car immage" src="@Model.Image3" />
                        </div>
                    </div>
                </div>
             

                    <div class="form-group mt-2">
                        <div class="col-md-offset-2 col-md-10">
                            <button type="submit" class="btn btn-primary adm_but text-white"><i class="fa fa-save mr-2 d-inline"></i>@CarRental.BLL.Resource.Save</button>
                        </div>
                    </div>
                </div>
                }

                <div class="d-flex justify-content-center flex-wrap">
                    @using (Ajax.BeginForm("FileUpload", "Main", new { img = 1 }, new AjaxOptions { UpdateTargetId = "res" }, new { enctype = "multipart/form-data" }))
                    {
                        <div>
                            @if(Model.Image != null)
                            {
                            <input type="hidden" id="oldim" value=@Model.Image />
                            }
                            <input id="fil" type="file" name="uploadFile" value="Choose Immage" class="btn btn-secondary d-none" />

                            <input type="submit" value="Confirm Immage" class="btn btn-primary d-none" id="sb" />
                        </div>
                    }
                    @using (Ajax.BeginForm("FileUpload", "Main", new { img = 2 }, new AjaxOptions { UpdateTargetId = "res2" }, new { enctype = "multipart/form-data" }))
                    {
                        <div>
                            @if(Model.Image2 != null)
                            {
                            <input type="hidden" id="oldim2" value=@Model.Image2 />
                            }
                            <input id="fil2" type="file" name="uploadFile" value="Choose Immage" class="btn btn-secondary d-none" />

                            <input type="submit" value="Confirm Immage" class="btn btn-primary d-none" id="sb2" />
                        </div>}
                    @using (Ajax.BeginForm("FileUpload", "Main", new { img = 3 }, new AjaxOptions { UpdateTargetId = "res3" }, new { enctype = "multipart/form-data" }))
                    {
                        <div class="">
                            @if(Model.Image3 != null)
                            {
                            <input type="hidden" id="oldim3" value=@Model.Image3 />
                            }
                            <input id="fil3" type="file" name="uploadFile" value="Choose Immage" class="btn btn-secondary d-none" />

                            <input type="submit" value="Confirm Immage" class="btn btn-primary d-none" id="sb3" />
                        </div>
                    }
                </div>
            </div>
</div>

 <script>
     $(document).on('change', '#fil', function () {
         $("#sb").click();         
     }); 
     $(document).on('change', '#fil2', function () {
         $("#sb2").click();
     }); 
     $(document).on('change', '#fil3', function () {
         $("#sb3").click();
     }); 
 </script>      