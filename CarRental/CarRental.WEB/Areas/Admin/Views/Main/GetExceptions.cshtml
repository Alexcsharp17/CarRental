@model IEnumerable<CarRental.BLL.DTO.ExceptionDetailDTO>

<div class="m-2">
    <p>
        <a href="@Url.Action("DeleteExceptions")" , class="btn btn-danger  text-dark"><i class="fa fa-fire-alt mr-1 d-inline"></i>Clear all</a>

    </p>
    <table class="table table-bordered table-striped">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ExceptionMessage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ControllerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ActionName)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ExceptionMessage)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ControllerName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ActionName)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    <a href="@Url.Action("ExceptionDetails", new { id = item.Id } )" , class="btn btn-info adm_but text-dark"><i class="fa fa-info mr-1 d-inline"></i>Detail</a>
                    <a href="@Url.Action("DeleteException", new { id = item.Id } )" , class="btn btn-warning adm_but text-dark"><i class="fa fa-trash mr-1 d-inline"></i>Detail</a>
                </td>
            </tr>
        }

    </table>
</div>